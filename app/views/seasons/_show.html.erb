<div class='uk-panel uk-width-5-10'>
  <table class="uk-table uk-align-center">
    <tr>
      <th>Name:</th>
      <td>Season <%= @season.ordinal %></td>
    </tr>
    <tr>
    <th><%= link_to("Matches:", matches_path, :season_id => @season.id) -%></th>
      <td>
        <% for match in @season.matches %>
          <%= link_to "#{match}", match_path(match) %><br/>
        <% end %>
        <% if @season.matches.empty? %><i>None</i><% end %>
      </td>
    </tr>
  <% if changes_allowed? %>
    <tr>
      <th class="actions">Actions: </th>
      <td class="actions">
        <%= link_to "Add a Match", {:action => 'new_match', :id => @season.id}, class: "uk-button" %>
        <%= link_to "Edit", edit_resource_path(@season), class: "uk-button"  %>
      </td>
    </tr>
  <% end %>
  </table>
</div>