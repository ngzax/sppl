    <ul>
    <% @season.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@season, {html: {class: "uk-form"}}) do |f| %>
  <fieldset class="uk-form-horizontal">
    <div class="uk-form-row">
      <label class="uk-form-label" for="ordinal"><%= f.label :ordinal -%>:</label>
      <div id="ordinal" class="uk-form-controls"><%= f.text_field :ordinal %></div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label" for="start_year"><%= f.label :start_year -%>:</label>
      <div id="start_year" class="uk-form-controls"><%= f.text_field :start_year %></div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label" for="stop_year"><%= f.label :stop_year -%>:</label>
      <div id="stop_year" class="uk-form-controls"><%= f.text_field :stop_year %></div>
    </div>
    <div class="uk-form-row">
      <%= f.submit class: "uk-button uk-button-primary" %>
    </div>
  </fieldset>
<% end %>
