<!DOCTYPE html 
     PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <title><%= ApplicationHelper.ShortName %> &raquo; <%= @page_title %></title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
   </head>
   <body>
   	<!-- BEGIN Header -->
      <div id="Header">
         <div id="TopBar">
           <%= link_to( image_tag( "sppl_banner.gif", :alt => "#{ApplicationHelper.Name}" ), "/" ) %>
         </div>
         <div id="ResourceMenu"><%= raw resource_menu %></div>
      </div>
      <!-- END Header -->
      <div id="Content">
         <% if flash[:error] %>
         <div id="SystemError">
            <%= textilize_without_paragraph(flash[:error]) %>
         </div>
         <% end %>
         <% if flash[:status] %>
         <div id="SystemStatus">
            <%= textilize_without_paragraph(flash[:status]) %>
         </div>
         <% end %>
         <%= yield %>
         <!--%= @content_for_layout %-->
      </div>
      <div id="Footer">
        <p/>
        <div id="BottomBar">
				  <p>Version <%= ApplicationHelper.Version %> :: <%= ApplicationHelper.Copyright %></p>
        </div>
      </div>
   </body>
</html>

