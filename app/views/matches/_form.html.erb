<% if @match.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@match.errors.count, "error") %> prohibited this Match from being saved:</h2>

    <ul>
    <% @match.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@match, {html: {class: "uk-form"}}) do |f| %>
  <fieldset class="uk-form-horizontal">
    <div class="uk-form-row">
      <label class="uk-form-label" for="match_date"><%= f.label :match_date %></label>
      <div id="match_date" class="uk-form-controls"><%= f.text_field :match_date %></div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label" for="season"><%= f.label :season %></label>
      <div id="season" class="uk-form-controls"><%= f.collection_select(:season_id, Season.all, :id, :name)%></div>
    </div>
    <div class="uk-form-row">
      <%= f.submit class: "uk-button uk-button-primary" %>
    </div>
  </fieldset>
<% end %>
