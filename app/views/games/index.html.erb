<h1>Showing All Games</h1>
<table border="1" cellpadding="5" cellspacing="1">
  <tr>
    <th>Id</th>
    <th>Match</th>
    <th>Game #</th>
    <th>Player Count</th>
    <th colspan="3">Actions</th>
  </tr>
<% @games.sort.each do |game| %>
  <tr>
    <td><%= game.id %></td>
    <td><%= link_to game.match.match_date, match_path(game.match) %></td>
    <td><%= game.ordinal %></td>
    <td><%= game.players.count %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'Add a New Game', new_game_path %>
