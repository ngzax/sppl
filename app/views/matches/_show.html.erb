<div class='uk-grid'>
  <div class='uk-panel uk-align-center uk-width-1-2'>
    <table class="uk-table uk-align-center">
      <tr>
        <th class="uk-text-right">Match Id:</th>
        <td><%= @match.id -%></td>
      </tr>
      <tr>
        <th class="uk-text-right">Date:</th>
        <td><%= @match.match_date %></td>
      </tr>
      <tr>
        <th class="uk-text-right">Season:</th>
        <td><%= link_to @match.season.name, season_path(@match.season) %></td>
      </tr>
      <tr>
        <th class="uk-text-right">Games:</th>
        <td>
          <% for game in @match.games %>
            <%= link_to "#{game}", game_path(game) %><br/>
          <% end %>
          <% if @match.games.empty? %><i>None</i><% end %>
        </td>
      </tr>
      <% if changes_allowed? %>
        <tr>
          <th class="uk-text-right">Actions</th>
          <td>
            <%= link_to "Add a Game", {:action => 'new_game', :id => @match.id}, class: "uk-button" -%>
            <%= link_to "Edit", edit_resource_path(@season), class: "uk-button"  %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
