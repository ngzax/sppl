<h5>Details</h5>
<table border="1" cellpadding="5" cellspacing="1">
  <tr>
    <th>Player</th>
    <td><%= @player.full_name %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%= @player.email %></td>
  </tr>
  <tr>
    <th>Phone</th>
    <td><%= @player.phone %></td>
  </tr>
</table>
<p/>
<h5>Games Played</h5>
<% if @player.games.empty? %>
<i>None</i>
<% else %>
<table border="1" cellpadding="5" cellspacing="1">
  <tr>
    <th>Match</th>
    <th>Game</th>
    <th>Place</th>
  </tr>
<%   for result in @player.results %>
  <tr>
    <td><%= link_to "#{result.game.match}", match_path(result.game.match) %></td>
    <td align="right"><%= link_to "#{result.game.ordinal}", game_path(result.game) %></td>
    <td align="right"><%= result.place %></td>
  </tr>
<%   end %>
</table>
<% end %>
<p/>
