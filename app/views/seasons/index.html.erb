<table border="1" cellpadding="5" cellspacing="1">
  <tr>
    <th>Name</th>
    <th>Start Year</th>
    <th>Stop Year</th>
    <th colspan="3">Actions</th>
  </tr>

<% @seasons.each do |season| %>
  <tr>
    <td>Season <%= season.ordinal %></td>
    <td><%= season.start_year %></td>
    <td><%= season.stop_year %></td>
    <td><%= link_to 'Show', season %></td>
    <td><%= link_to 'Edit', edit_season_path(season) %></td>
    <td><%= link_to 'Destroy', season, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

