<div class="uk-vertical-align uk-text-center uk-height-1-1">
  <div class="uk-panel">
    <div class="uk-panel-heading">
      Welcome Back!
    </div>
    <div class="uk-vertical-align-middle">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "uk-panel uk-panel-box uk-form"}) do |f| %>
        <div class="uk-form-row">
          <%= f.input :email, label: false, placeholder: "Email", required: true, autofocus: true, html: {class: "uk-width-1-1 uk-form-large"} %>
        </div>
        <div class="uk-form-row">
          <%= f.input :password, label: false, placeholder: "Password", required: true, html: {class: "uk-width-1-1 uk-form-large"} %>
        </div>
        <div class="uk-form-row">
          <%= f.input :remember_me, as: :boolean, html: {class: "uk-width-1-1 uk-form-large"} if devise_mapping.rememberable? %>
        </div>
        <div class="uk-form-row">
          <%= f.button :submit, "Log in", class: "uk-button uk-button-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>
